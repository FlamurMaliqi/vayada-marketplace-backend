# Vayada Creator Marketplace Backend - Environment Variables
# Copy this file to .env and customize as needed

# =============================================================================
# API Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_TITLE=Vayada API
API_VERSION=1.0.0

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
# Example: postgresql://vayada_user:very-strong-password@db-host:5432/vayada_db
DATABASE_URL=

# Database connection pool settings
DATABASE_POOL_MIN_SIZE=2
DATABASE_POOL_MAX_SIZE=10
DATABASE_COMMAND_TIMEOUT=60

# =============================================================================
# CORS Configuration
# =============================================================================
# Comma-separated list of allowed frontend origins
# Example: https://frontend.yourdomain.com,https://admin.yourdomain.com
CORS_ORIGINS=

# Allow credentials in CORS requests
CORS_ALLOW_CREDENTIALS=true

# Allowed HTTP methods (use "*" for all methods, or comma-separated list)
CORS_ALLOW_METHODS=*

# Allowed HTTP headers (use "*" for all headers, or comma-separated list)
CORS_ALLOW_HEADERS=*

# =============================================================================
# Environment & Debug
# =============================================================================
ENVIRONMENT=development
DEBUG=true

# =============================================================================
# Auth Database Configuration (shared between marketplace and booking engine)
# =============================================================================
AUTH_DATABASE_URL=postgresql://vayada_auth_user:vayada_auth_password@localhost:5435/vayada_auth_db

# =============================================================================
# JWT Configuration
# =============================================================================
# IMPORTANT: Change this to a secure random string in production!
# Generate a secure key: openssl rand -hex 32
JWT_SECRET_KEY=your-secret-key-change-in-production

# JWT algorithm (typically HS256)
JWT_ALGORITHM=HS256

# Token expiration time in minutes (default: 1440 = 24 hours)
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440
